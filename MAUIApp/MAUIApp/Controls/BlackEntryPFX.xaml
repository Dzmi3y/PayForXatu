<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PayForXatu.MAUIApp.Controls.BlackEntryPFX"
             xmlns:controls="clr-namespace:PayForXatu.MAUIApp.Controls"
             x:Name="this">
  <ContentView.Content>
    <StackLayout>
      <Frame BackgroundColor="#333" CornerRadius="20" Margin="0" Padding="10,0,10,4" BorderColor="White" HeightRequest="50">
        <controls:EntryPFX
                BindingContext="{x:Reference this}"
                Placeholder="{Binding Placeholder, Mode=TwoWay}"
                Text="{Binding Text, Mode=TwoWay}"
                IsPassword="{Binding IsPassword,Mode=TwoWay}"
                Margin="0,3,0,0"
                Background="#333"
                TextColor="#BDBDBD"
                PlaceholderColor="#828282"
                FontFamily="ChicagoRegular"
                FontSize="Large"/>
      </Frame>
    </StackLayout>
  </ContentView.Content>
</ContentView>
